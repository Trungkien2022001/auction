{
  "name": "auction",
  "version": "1.0.0",
  "description": "Auction Hub",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:api": "npm run start:dev --workspace=packages/core",
    "build:api": "npm run build --workspace=packages/core",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Trungkien2022001/auction.git"
  },
  "keywords": [
    "auction"
  ],
  "author": "nguyenkien2022001",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Trungkien2022001/auction/issues"
  },
  "homepage": "https://github.com/Trungkien2022001/auction#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "**/*.ts*": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
		"hooks": {
			"commit-msg": "commitlint",
			"pre-commit": "pretty-quick --no-verify --staged"
		}
	},
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": true,
    "useTabs": true,
    "tabWidth": 4,
    "arrowParens": "always",
    "trailingComma": "none",
    "quoteProps": "as-needed",
    "trimTrailingWhitespace": true,
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "useTabs": false,
          "tabWidth": 2
        }
      },
      {
        "files": "*.yml",
        "options": {
          "useTabs": false,
          "tabWidth": 2
        }
      }
    ]
  },
  "dependencies": {
    "prettier": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cron": "^2.4.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "29.2.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tslint": "6.1.3",
    "typescript": "^5.5.4"
  }
}
